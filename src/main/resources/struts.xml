<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.freeroute.controllerPackage" value="com.gaohui"/>
    <constant name="struts.freeroute.defaultParentPackage" value="my-struts"/>

    <package name="my-struts" extends="struts-default">
        <action name="hello">
            <result>/hello.html</result>
        </action>

        <action name="hello2" class="com.gaohui.action.HelloAction">
            <result>/hello.html</result>
        </action>
    </package>
</struts>
